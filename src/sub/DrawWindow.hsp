*drawMainWindow
	nidPush

	mainWndW = 0
	mainWndH = 0
	dummy = 0

	if (mode == MODE_LIST){
		gsel WND_GRID, 1
	} else {
		gsel WND_GRID, -1
	}

	if (mode = MODE_OPTION){
		if enabletweetwindow: gsel WND_TWITTER, -1
		if enableFFMPEGLogWindow: HideFFMPEGLog
	} else {
		if enabletweetwindow: gsel WND_TWITTER, 1+twiFrontRow
		if enableFFMPEGLogWindow: ShowFFMPEGLog
	}

	gsel WND_MAIN, 1+frontrow
	//sendmsg WND_INFO( WND_MAIN, WI_HANDLE), WM_SETREDRAW, 0

	clrobj 2, -1
	syscolor 15: boxf: syscolor 8

	font "メイリオ", Scale(13)
	mref BMSCR, 67
	hFontMain = BMSCR(38)

	sendmsg hComBox, WM_SETFONT, hFontMain, 1
	MoveWindow hComBox, 0, 0, Scale(175), Scale(30), 1
	GetClientRect hComBox, varptr(rect)
	ComBoxH = rect(3)

	if (mode == MODE_OPTION){
		sendmsg hOptionComBox, WM_SETFONT, hFontMain, 1
		MoveWindow hOptionComBox, Scale(175), 0, Scale(175), Scale(30), 1
	} else {
		MoveWindow hOptionComBox, Scale(350), 0, Scale(175), Scale(30), 1
	}

	if (mode == MODE_SSCAP){
		objprm comboxId, 0
		modemes = "SSキャプチャ"
	} else: if(mode == MODE_LIST){
		switch listmode
			case LISTMODE_LIST
				objprm comboxId, 1
				modemes = "艦娘一覧"
				swbreak
			case LISTMODE_FLEET
				objprm comboxId, 2
				modemes = "攻略編成"
				swbreak
			case LISTMODE_OTHER
				objprm comboxId, 3
				modemes = "その他一覧作成"
				swbreak
		swend
	} else: if(mode == MODE_OPTION){
		objprm comboxId, 4
		modemes = "オプション"
	}

